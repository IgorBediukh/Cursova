<link rel="stylesheet" href="../../assets/stylesheets/stylesheet.css">
<body>
<header>
  <h1>Warehouse management system</h1>
</header>

<main>

  <p style="color: green"><%= notice %></p>

  <div class="boxy">

    <h2>Shipments</h2>

    <div id="shipments">
      <% @shipments.each do |shipment| %>
        <%= render shipment %>
        <p>
          <%= link_to "Show this shipment", shipment , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
        </p>
      <% end %>
    </div>

  </div>

  <p style="text-align:center;">
    <%= link_to "New shipment", new_shipment_path  , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)' %>
  </p>
  <p style="text-align:center;">
    <%= link_to 'На головну', root_path, class: 'btn btn-primary' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
  </p>

</main>



</body>