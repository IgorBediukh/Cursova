<link rel="stylesheet" href="../../assets/stylesheets/stylesheet.css">
<body>
<header>
  <h1>Warehouse management system</h1>
</header>

<main>

  <p style="color: green"><%= notice %></p>

  <div class="boxy">

    <%= render @shipment %>

    <div>
      <%= link_to "Edit this shipment", edit_shipment_path(@shipment) , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %> |
      <%= link_to "Back to shipments", shipments_path , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>

      <%= button_to "Destroy this shipment", @shipment, method: :delete , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)' %>
    </div>

  </div>

</main>
</body>
