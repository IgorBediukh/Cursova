<body>
<header>
  <h1>Warehouse management system</h1>
</header>

<main>

  <div class="boxy">

    <h2>Generated Report</h2>

    <%= form_tag generate_report_path, method: :post, id: "report_form" do %>
      <label for="start_date">Start Date:</label>
      <%= date_field_tag :start_date %>

      <label for="end_date">End Date:</label>
      <%= date_field_tag :end_date %>

      <%= submit_tag "Generate Report" , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
    <% end %>

    <script>
        document.getElementById("report_form").addEventListener("submit", function(event) {
            event.preventDefault();
            var startDate = document.getElementById("start_date").value;
            var endDate = document.getElementById("end_date").value;
            this.submit();
        });
    </script>

  </div>

  <p style="text-align:center;">
    <%= link_to 'На головну', root_path, class: 'btn btn-primary' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
    <%= link_to 'Звіт за 2023', reports_report_2023_path, class: 'btn btn-primary' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
    <%= link_to 'Звіт за 2022', reports_report_2022_path, class: 'btn btn-primary' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
    <%= link_to 'Звіт за 2021', reports_report_2021_path, class: 'btn btn-primary' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
  </p>


</main>



</body>