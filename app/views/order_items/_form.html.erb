<body>

<main>

  <%= form_with(model: order_item) do |form| %>
    <% if order_item.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(order_item.errors.count, "error") %> prohibited this order_item from being saved:</h2>

        <ul>
          <% order_item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :order_id %>
      <%= form.collection_select :order_id, @orders, :id, :order_id %>
    </div>
    <div class="field">
      <%= form.label :product_id, style: "display:block"  %>
      <%= form.collection_select :product_id, @products, :id, :name %>
    </div>

    <div>
      <%= form.label :quantity, style: "display: block" %>
      <%= form.number_field :quantity %>
    </div>

    <div>
      <%= form.submit  %>
    </div>
  <% end %>

</main>

</body>
