<link rel="stylesheet" href="../../assets/stylesheets/stylesheet.css">
<body>
<header>
  <h1>Warehouse management system</h1>
</header>

<main>

  <p style="color: green"><%= notice %></p>

  <div class="boxy">

    <h2>Order items</h2>
    <div id="order_items">
      <% @order_items.each do |order_item| %>
        <%= render order_item %>
        <p>
          <%= link_to "Show this order item", order_item , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'%>
        </p>
      <% end %>
    </div>

  </div>

  <p style="text-align:center;">
    <%= link_to "New order item", new_order_item_path, style: 'background-color: red' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'%>
  </p>
  <p style="text-align:center;">
    <%= link_to 'На головну', root_path, class: 'btn btn-primary', style: 'background-color: red' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'%>
  </p>

</main>



</body>