<link rel="stylesheet" href="../../assets/stylesheets/stylesheet.css">
<body>
<header>
  <h1>Warehouse management system</h1>
</header>

<main>

  <p style="color: green"><%= notice %></p>

  <div class="boxy">

    <%= render @product %>

    <div>
      <%= link_to "Edit this product", edit_product_path(@product) , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %> |
      <%= link_to "Back to products", products_path , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>

      <%= button_to "Destroy this product", @product, method: :delete , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
    </div>

  </div>

</main>

</body>
