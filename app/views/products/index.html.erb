<link rel="stylesheet" href="../../assets/stylesheets/stylesheet.css">
<body>
<header>
  <h1>Warehouse management system</h1>
</header>

<main>

  <div class="boxy">

    <p style="color: green"><%= notice %></p>

    <h2>Products</h2>
    <%= form_tag(products_path, method: "get") do %>
      <%= text_field_tag(:search, params[:search], placeholder: "Поиск по названию") %>
      <%= submit_tag("Поиск") %>
    <% end %>
    <div id="products">
      <% @products.each do |product| %>
        <%= render product %>
        <p>
          <%= link_to "Show this product", product , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
        </p>
      <% end %>
    </div>

  </div>

  <p style="text-align:center;">
    <%= link_to "New product", new_product_path , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
  </p>
  <p style="text-align:center;">
    <%= link_to 'На головну', root_path, class: 'btn btn-primary' , style: 'margin-top: 10px; background-color: rgb(248, 203, 210)'  %>
  </p>

</main>



</body>
